{% extends 'base.html.twig' %}

{% block body %}
    <h1>Recrutement</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ recrutement.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ recrutement.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ recrutement.prenom }}</td>
            </tr>
            <tr>
                <th>Sexe</th>
                <td>{% if recrutement.sexe %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Age</th>
                <td>{{ recrutement.age }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ recrutement.telephone }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ recrutement.email }}</td>
            </tr>
            <tr>
                <th>Adresseactuel</th>
                <td>{{ recrutement.adresseactuel }}</td>
            </tr>
            <tr>
                <th>Qualifiations</th>
                <td>{{ recrutement.qualifiations }}</td>
            </tr>
            <tr>
                <th>Niveauetude</th>
                <td>{{ recrutement.niveauEtude }}</td>
            </tr>
            <tr>
                <th>Niveauexperience</th>
                <td>{{ recrutement.niveauExperience }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ recrutement.statut }}</td>
            </tr>
            <tr>
                <th>Pays</th>
                <td>{{ recrutement.pays }}</td>
            </tr>
            <tr>
                <th>Typeemploi</th>
                <td>{{ recrutement.typeEmploi }}</td>
            </tr>
            <tr>
                <th>Besoins</th>
                <td>{{ recrutement.besoins }}</td>
            </tr>
            <tr>
                <th>Attentes</th>
                <td>{{ recrutement.attentes }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('recrutement_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('recrutement_edit', { 'id': recrutement.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
